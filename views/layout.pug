doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav(role="navigation")
      ul
        li
          a(href="/") Home
        if user
          li(class="right name") Logged in as&nbsp#[i #{user.name}]
          li
            form(action="/logout" method="post")
              button(type="submit") Log Out
        else
          li(class="right")
            a(href="/login") Log In
          li
            a(href="/register") Register
    block content
